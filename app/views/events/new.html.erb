      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <b>Welcome!</b> Let Us Lunch is a quick, easy way to schedule a lunch with your coworkers and friends.
          </div>
          <%= form_for @event, html: {"ng-controller" => "EventFormCtrl"} do |f| %>
          <div class="panel panel-primary">
            <div class="panel-heading">Create a Lunch Meetup!
            </div>
            <div class="panel-body">
              <div class="form-group">
                <label class="control-label">Where do you want to meet?</label>
                <div class="controls">
                  <%= f.text_field :location, "class" => "form-control input-lg", "ng-model" => "location", "place-complete" => true, "required" => true %>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">When do you want to meet?</label>
                <div class="controls">
                  <input type="datetime" class="form-control" placeholder="tomorrow at noon" required>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Who's Invited?</label>
                <div class="controls email-list">
                  <input ng-repeat="email in emails track by $index" type="email" name="emails[]" class="form-control" placeholder="your.friend@example.com">
                  <button class="btn btn-block btn-default" ng-click="emails.push('')">
                    <i class="icon-female"></i>&nbsp;Add Another Friend</button>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Your Name</label>
                <div class="controls">
                  <input type="text" class="form-control" placeholder="Bob McFriendly" name="event[organizer_name]" required>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Your Email</label>
                <div class="controls">
                  <input type="email" class="form-control" placeholder="you@example.com" name="event[organizer_email]" required>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Message</label>
                <div class="controls">
                  <textarea class="form-control" placeholder="Hey guys, let's grab some lunch!" name="event[message]"></textarea>
                </div>
              </div>
              <button type="submit" class="btn btn-block btn-success btn-lg">Send Invitations</button>
            </div>
          </div>
        </div>
      </div><% end %>
    </div>
	</body>

</html>